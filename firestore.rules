rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ DEVELOPMENT MODE: Allow public access
    // TODO: Implement proper Firebase Authentication for production
    match /attendance/{document=**} {
      // Allow anyone to read/write (for internal use only)
      allow read, write: if true;
    }
    
    // Allow any other collections
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
